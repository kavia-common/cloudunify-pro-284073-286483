# Server settings
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info
NODE_ENV=development

# CORS: comma-separated list of allowed origins or * for any
CORS_ORIGIN=*

# Preview/Embed mode:
# When true, the app sets CSP frame-ancestors to allow embedding in Kavia preview:
#   'self' https://*.cloud.kavia.ai
# and relaxes COEP/COOP for embedded contexts.
PREVIEW_MODE=false
# Optional: override space-separated frame-ancestors list (without commas)
# Example: "'self' https://*.cloud.kavia.ai https://example.com"
PREVIEW_FRAME_ANCESTORS='self https://*.cloud.kavia.ai'

# Compatibility with existing container env (not required by FastAPI directly)
REACT_APP_LOG_LEVEL=info
REACT_APP_BACKEND_URL=http://localhost:3001
REACT_APP_FRONTEND_URL=http://localhost:3000
