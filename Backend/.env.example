# CloudUnify Pro Backend - .env.example
# Copy this file to .env and adjust values as needed.

# Application
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info
REACT_APP_LOG_LEVEL=info
REACT_APP_TRUST_PROXY=true
CORS_ORIGIN=http://localhost:3000

# JWT
JWT_SECRET=dev-super-secret-change-me
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Database (preferred)
# IMPORTANT: This must match the DSN in Database/db_connection.txt.
# If Database/db_connection.txt contains: "postgresql://appuser:dbuser123@localhost:5000/myapp"
# set DATABASE_URL to that exact value:
DATABASE_URL=postgresql://appuser:dbuser123@localhost:5000/myapp

# Optional advanced DB options
PGSSL=false
PGPOOL_MAX=10
PGAPPNAME=cloudunify-pro-backend
# PGCONNECT_TIMEOUT_MS=5000
# PGIDLE_TIMEOUT_MS=30000

# Alternative discrete PG variables (used only if DATABASE_URL is not set)
# PGHOST=localhost
# PGPORT=5000
# PGUSER=appuser
# PGPASSWORD=dbuser123
# PGDATABASE=myapp

# Seeding & tooling
SEED_ADMIN_TOKEN=replace-with-long-random-string
# Optional: explicitly point to a .projdefn directory
# PROJDEFN_DIR=/absolute/path/to/.projdefn
