# Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# CORS
# Comma-separated list of allowed origins or "*" for all (dev only)
CORS_ORIGIN=http://localhost:3000

# JWT
# IMPORTANT: Set a strong secret in production
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Database (choose either DATABASE_URL or individual PG* settings)
# Example DATABASE_URL: postgres://user:pass@host:5432/dbname
DATABASE_URL=
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=
PGDATABASE=cloudunify_pro
PGSSL=false
PGPOOL_MAX=10

# Seeding controls
# Required in production to access /_internal/seed endpoints
SEED_ADMIN_TOKEN=
# Optional: override where .projdefn directory is located
PROJDEFN_DIR=

# Optional (logging + proxy)
REACT_APP_LOG_LEVEL=info
REACT_APP_TRUST_PROXY=true
