# CloudUnify Pro - Backend (.env.example)
# Copy to .env and customize values as needed. Never commit your real .env.

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
# pino-http also checks this for compatibility with some deployments
REACT_APP_LOG_LEVEL=info
# Trust proxy (true/false). When behind a proxy/load balancer, set true.
REACT_APP_TRUST_PROXY=true

# CORS
# Comma-separated list of allowed origins (e.g., http://localhost:3000,https://app.example.com)
# Use "*" to allow all (development only).
CORS_ORIGIN=*

# JWT Auth (required)
# Replace with a secure random secret in real environments.
JWT_SECRET=replace_me_with_secure_random
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Database - choose either DATABASE_URL OR individual PG* vars
# e.g., DATABASE_URL=postgres://user:password@localhost:5432/cloudunify_pro?sslmode=disable
DATABASE_URL=
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=cloudunify_pro
# If connecting over TLS, set PGSSL=true (uses { rejectUnauthorized: false })
PGSSL=false
# Connection pool max size
PGPOOL_MAX=10

# Rate limiting for /auth/login
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX=10

# Seeding
# In production, internal seeding endpoints require this header: X-Seed-Token: <token>
SEED_ADMIN_TOKEN=
# Optional explicit directory containing .projdefn JSON files for mock data
PROJDEFN_DIR=
