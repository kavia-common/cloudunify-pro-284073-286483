# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
REACT_APP_LOG_LEVEL=info
REACT_APP_TRUST_PROXY=true

# CORS
# Comma-separated list of allowed origins or '*' to allow all
CORS_ORIGIN=http://localhost:3000,https://localhost:3000

# JWT
# IMPORTANT: Change JWT_SECRET in all environments
JWT_SECRET=CHANGE_ME_SUPER_SECRET
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Database (use either DATABASE_URL or the individual PG* vars)
# Example DATABASE_URL: postgres://user:password@localhost:5432/cloudunify_pro
# DATABASE_URL=postgres://user:password@localhost:5432/cloudunify_pro
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=cloudunify_pro
PGSSL=false
PGPOOL_MAX=10

# Seeding access (required in production)
SEED_ADMIN_TOKEN=
# Optional explicit path to .projdefn directory
PROJDEFN_DIR=

# Auth rate limiting for /auth/login
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX=10
