# Server
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info
REACT_APP_LOG_LEVEL=info

# Preview/Embed mode
# When true, relax security headers to allow iframe embedding from https://*.cloud.kavia.ai
# - Disables X-Frame-Options (frameguard)
# - Sets CSP frame-ancestors to include https://*.cloud.kavia.ai
PREVIEW_MODE=false

# CORS
# Comma-separated list of allowed origins or "*" for all
CORS_ORIGIN=*

# Auth (JWT)
# Set a strong secret in non-dev environments
JWT_SECRET=change_me_in_local_dev_only
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Database (choose DATABASE_URL or discrete PG* vars)
# DATABASE_URL=postgresql://user:password@host:5432/dbname
PGHOST=
PGPORT=5432
PGUSER=
PGPASSWORD=
PGDATABASE=
PGSSL=false
PGPOOL_MAX=10
PGCONNECT_TIMEOUT_MS=5000
PGIDLE_TIMEOUT_MS=30000
PGAPPNAME=cloudunify-pro-backend

# Seeding / Mock data
SEED_ADMIN_TOKEN=
PROJDEFN_DIR=

# Optional: explicit path to db_connection.txt (used if DATABASE_URL not provided)
DB_CONNECTION_FILE=
