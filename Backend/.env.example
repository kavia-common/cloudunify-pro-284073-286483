# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Logging
REACT_APP_LOG_LEVEL=info
REACT_APP_TRUST_PROXY=true

# CORS
# Comma-separated list of allowed origins or "*" to allow all
CORS_ORIGIN=http://localhost:3000

# Database (use either DATABASE_URL or discrete PG* vars)
# DATABASE_URL=postgres://user:pass@host:5432/dbname
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=cloudunify_pro
PGSSL=false
PGPOOL_MAX=10

# JWT
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Seed security (prod only)
SEED_ADMIN_TOKEN=super-secret-seed-token
PROJDEFN_DIR=

# Rate limiting
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX=10
