# CloudUnify Pro Backend - Example Environment Variables
# Copy this file to .env and update values for your environment.
# NOTE: Do NOT commit your actual .env with secrets.

# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
# Optional: used by pino-http if set (fallback to LOG_LEVEL)
REACT_APP_LOG_LEVEL=
# CORS origins: "*" or comma-separated list like "https://app.example.com,https://staging.example.com"
CORS_ORIGIN=*

# Authentication (JWT)
# IMPORTANT: Set a strong, non-empty secret in all environments
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=1h
JWT_ISSUER=cloudunify-pro
JWT_AUDIENCE=cloudunify-pro-frontend

# Database (Prefer DATABASE_URL)
# Example: postgresql://appuser:strongpass@db-host:5432/cloudunify_pro
DATABASE_URL=
# Optional: path to db_connection.txt, fallback used to extract DSN if DATABASE_URL is not set
# Example for local mono-repo: ../Database/db_connection.txt
DB_CONNECTION_FILE=
# Alternatively, provide discrete PG* variables
PGHOST=
PGPORT=5432
PGUSER=
PGPASSWORD=
PGDATABASE=
# Enable SSL for cloud DBs (if needed)
PGSSL=false
# Pool and connection tuning
PGPOOL_MAX=10
PGCONNECT_TIMEOUT_MS=5000
PGIDLE_TIMEOUT_MS=30000
PGAPPNAME=cloudunify-pro-backend

# Internal/Seeding
# Required in production to access /_internal/seed* endpoints
SEED_ADMIN_TOKEN=
# Optional: override auto-discovery of .projdefn location
PROJDEFN_DIR=

# Proxy/Networking
# Trust proxy defaults to true in app; override if necessary
REACT_APP_TRUST_PROXY=true
